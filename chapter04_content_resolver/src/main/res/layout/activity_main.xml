<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="初始化"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnQuery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnInsertOne"/>

    <Button
        android:id="@+id/btnQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="查询所有"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btnInit"
        app:layout_constraintEnd_toStartOf="@id/btnDelAll"
        app:layout_constraintTop_toTopOf="@id/btnInit" />
    <Button
        android:id="@+id/btnDelAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="删除所有"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btnQuery"
        app:layout_constraintTop_toTopOf="@id/btnInit"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnInsertOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入一条"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnUpdateOne"
        app:layout_constraintTop_toBottomOf="@id/btnInit"
        app:layout_constraintBottom_toTopOf="@id/lv"/>

    <Button
        android:id="@+id/btnUpdateOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="修改一条"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btnInsertOne"
        app:layout_constraintEnd_toStartOf="@id/btnDelOne"
        app:layout_constraintTop_toTopOf="@id/btnInsertOne" />
    <Button
        android:id="@+id/btnDelOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="删除一条"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btnUpdateOne"
        app:layout_constraintTop_toTopOf="@id/btnInsertOne"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnInsertOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>